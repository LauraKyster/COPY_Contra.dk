---
import Item from "../assets/Item.astro";
---

<section id="items_section">
  <Item href="#1" text="Local Poke Mom"
    ><img src="/items/contra_tat.webp" alt="tattoo flash" /></Item
  >
  <Item href="#2" text="Studio Soriano"
    ><img src="/items/bag2.webp" alt="bag" /></Item
  >
  <Item href="#3" text="Guldhammer studio"
    ><img src="/items/grill.webp" alt="grill" /></Item
  >
  <Item href="#4" text="Nvll+Void Jemlery"
    ><img src="/items/nvll_bracelet.webp" alt="bracelet" /></Item
  >
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: var(--gap-32);
    flex-wrap: wrap;
    margin-top: var(--margin-tb);
    margin-bottom: var(--margin-tb);
  }
  @media (min-width: 1120px) {
    section {
      flex-direction: row;
      gap: var(--gap-16);
      flex-wrap: wrap;
      margin-top: var(--margin-tb);
      margin-bottom: var(--margin-tb);
    }
  }
</style>
