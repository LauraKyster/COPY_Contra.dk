---
import "../assets/Btn.astro";
import "../assets/Link.astro";
import "../../css/global.css";
import "../../css/variables.css";
import Link from "../assets/Link.astro";
import Btn from "../assets/Btn.astro";
---

<section id="events_section" class="events_sec">
  <div class="events_container">
    <div class="events_title">
      <div class="events_h2">
        <h2>our</h2><h2 class="text_blue">events</h2>
      </div>
      <h4 class="text_blue">MARKETS | CHARITY EVENTS | GATHERINGS | CELEBRATIONS</h4>
    </div>
    <div class="text_flex">
      <div class="info">
        <p>At Contra, we host a mix of events that bring our community together. From cute little markets, to heartfelt Charity Events and cozy Gatherings that spark connection. Everybody is welcome at any time in our home, Contra House.</p>

        <div class="text_blue">
          <p class="p_bold">We will post about upcoming events on our instagram.</p>
        </div>
      </div>
      <div class="events_btn">
        <Btn variant="primary">go to instagram</Btn>
      </div>
    </div>
    <div class="events_img">
      <img src="../../../public/events_img_placeholder.png" alt="img_placeholder" />
    </div>
  </div>
</section>

<style>
  .events_sec {
    margin-top: var(--gap-96);
    margin-left: var(--gap-16);
    margin-right: var(--gap-16);
  }
  .text_blue {
    color: var(--blue);
  }
  .events_h2 {
    display: flex;
    flex-direction: row;
    gap: var(--gap-8);
  }
  .events_sec h2,
  h4,
  p {
    margin-top: 0;
    margin-bottom: 0;
  }
  .events_title {
    display: flex;
    flex-direction: column;
    gap: var(--gap-8);
    margin-bottom: var(--gap-48);
  }
  .info {
    display: flex;
    flex-direction: column;
    gap: var(--gap-48);
    margin-bottom: var(--gap-48);
  }
  .events_btn {
    margin-bottom: var(--gap-48);
  }
  .p_bold {
    font-weight: var(--bold-weight);
  }

  @media screen and (min-width: 900px) {
    .events_container {
      display: flex;
      flex-direction: column;
      margin-left: var(--margin-side);
    }
    .events_sec {
      max-width: var(--content-max);
      min-width: var(--content-min);
      margin-left: var(--margin-side);
      margin-right: var(--margin-side);
      margin-top: var(--gap-128);
      margin-bottom: var(--margin-tb);
    }
    .events_h2 {
      flex-direction: row;
    }
    .info {
      max-width: 760px;
    }
    .text_flex {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    .events_img{
        max-width: 320px;
    }
</style>
