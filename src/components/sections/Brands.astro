---
import Btn from "../assets/Btn.astro";

const { data } = Astro.props;
---

<section>
  <div>
    <div>
      <h2 class="h3">{data.title}</h2>
      <h3 class="h4 text_blue">{data.subtitle}</h3>
    </div>
    <div class="flex_container">
      <div>
        <article>
          <div>
            <p>{data.description}</p>

            <div>
              <h4 class="h4">Instagram</h4>
              <Btn href={data.insta1} variant="primary">{data.btn_text}</Btn>
            </div>
            {
              data.btn_text2 && (
                <div>
                  <h5 class="h4">Website</h5>
                  <Btn
                    href="https://www.instagram.com/local.poke.mom/"
                    variant="secondary"
                    target="_blank"
                  >
                    {data.btn_text2}
                  </Btn>
                </div>
              )
            }
          </div>
        </article>
        <article>
          <p>{data.description2}</p>
          <div>
            {
              data.btn_text3 && (
                <div>
                  <h3 class="h4">Instagram</h3>
                  <Btn href={data.insta2} variant="secondary">
                    {data.btn_text3}
                  </Btn>
                </div>
              )
            }
            {
              data.btn_text4 && (
                <div>
                  <h3 class="h4">Website</h3>
                  <Btn href={data.web2} variant="secondary">
                    {data.btn_text4}
                  </Btn>
                </div>
              )
            }
          </div>
        </article>
      </div>
      <div class="video_container">
        <img src={data.video}></img>
      </div>
    </div>
  </div>
</section>

<style>
  .flex_container {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--gap-64);
  }
  .video_container {
    width: 360px;
    height: auto;
    object-fit: cover;
    border-radius: var(--border-radius-8);
  }
</style>
