---
import Link from "../assets/Link.astro";

const { dat } = Astro.props;
---

<section id="header_section" class="header_sec">
  <div class="title_video_wrapper">
    <h1 class="h1_bold">
      Contra <span class="h1_regular">House</span>
    </h1>
    <div class="header_video">
      <video autoplay loop muted playsinline class="video" src={dat.video}
      ></video>
    </div>
  </div>
  <div class="brand_names">
    <ul>
      <li>
        <Link href="#1" variant="tertiary" src="/products/arm.webp"
          >lokal poke mom</Link
        ><div><p class="p">Tattoo</p></div>
      </li>
      <li>
        <Link href="#3" variant="tertiary" src="/products/ring.webp"
          >guldhammer studio</Link
        ><div><p class="p">Jewlery</p></div>
      </li>

      <li>
        <Link href="#2" variant="tertiary" src="/products/raincoat.webp"
          >studio soriano</Link
        ><div><p class="p">Wear</p></div>
      </li>
      <li>
        <Link href="#4" variant="tertiary" src="/products/necklace.webp"
          >nvll+void</Link
        ><div><p class="p">Jewlery</p></div>
      </li>
    </ul>
  </div>
</section>

<style>
  .header_sec {
    margin-top: 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--gap-48);
  }

  .header_sec h1 {
    margin: 0;
  }
  .brand_names ul {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--gap-24);
    padding: 0;
    margin: 0;
    margin-top: -32px;
  }
  li div {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .p {
    font-family: var(--primary-font);
    font-size: var(--xxxs-size);
    text-transform: uppercase;
  }
  .header_video {
    z-index: -11;
  }
  video {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    border-radius: 50%;
    max-width: 480px;
    height: auto;
  }
  .title_video_wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    align-self: stretch;
    gap: var(--gap-16);
  }
  @media screen and (min-width: 1120px) {
    .header_sec {
      gap: var(--gap-32);
    }
    .brand_names ul {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      gap: var(--gap-128);
      align-self: stretch;
      margin-top: 0;
    }

    .header_video {
      max-width: 680px;
      min-height: auto;
      margin-top: 0;
    }
  }
</style>
