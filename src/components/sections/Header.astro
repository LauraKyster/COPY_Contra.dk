---
import Link from "../assets/Link.astro";

const { src } = Astro.props;
---

<section id="header_section" class="header_sec">
  <div class="title_video_wrapper">
    <h1 class="size h1_bold">
      Contra <span class="size h1_regular">House</span>
    </h1>
    <div class="header_video">
      <video autoplay loop muted playsinline class="video" src="/Round.webm"
      ></video>
    </div>
  </div>
  <div class="brand_names">
    <ul>
      <li>
        <Link href="#1" variant="tertiary" src="/products/contra_tat.webp"
          >lokal poke mom
        </Link>
      </li>
      <li>
        <Link href="#3" variant="tertiary" src="/products/ring.webp"
          >guldhammer studio</Link
        >
      </li>

      <li>
        <Link href="#2" variant="tertiary" src="/products/raincoat.webp"
          >studio soriano</Link
        >
      </li>
      <li>
        <Link href="#4" variant="tertiary" src="/products/necklace.webp"
          >nvll+void</Link
        >
      </li>
    </ul>
  </div>
</section>

<style>
  section {
    gap: 0;
  }
  .header_sec {
    margin-top: 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .size {
    margin: 0;
  }
  .header_sec h1 {
    margin: 0;
  }
  .brand_names ul {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--gap-24);
    padding: 0;
    margin: 0;
  }
  .brand_names ul li {
    white-space: nowrap;
  }

  .header_video {
    max-width: 300px;
    min-height: auto;
    margin-bottom: var(--gap-32);
  }
  .title_video_wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    align-self: stretch;
  }
  @media screen and (min-width: 900px) {
    .size {
      font-size: 3rem;
    }
  }
  @media screen and (min-width: 1120px) {
    .size {
      font-size: var(--xl-size);
    }
    .brand_names ul {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      gap: var(--gap-128);
      align-self: stretch;
    }

    .header_video {
      max-width: 100%;
      min-height: auto;
    }
  }
</style>
