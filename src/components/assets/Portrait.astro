---
const { text, href } = Astro.props;
---

<a href={href} class="portrait_link">
  <article>
    <slot />
    <div class="show text_box">
      <div class="text_container">
        <p class="h4">{text}</p>
      </div>
    </div>
  </article>
</a>

<style>
  .text_box {
    visibility: hidden;
    position: absolute;
  }

  @media (min-width: 900px) {
    article {
      filter: blur(4px);
      transition: filter 0.3s ease;
      width: 264px;
      height: auto;
    }
    article:hover {
      filter: blur(0px);
    }
    .show {
      visibility: hidden;
      opacity: 0;
    }
    article:hover .show {
      visibility: visible;
      opacity: 1;
    }

    .text_box {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: end;
      cursor: pointer;
      text-align: center;
      transition:
        visibility 0.3s ease,
        opacity 0.3s ease;
    }
    .text_box p {
      color: var(--primary-text);
      padding: var(--gap-16);
      text-transform: uppercase;
      margin-bottom: 0;
    }
    .text_container {
      background-color: var(--background-nav);
      width: 100%;
    }
  }
</style>
