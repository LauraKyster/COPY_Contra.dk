---
const { text } = Astro.props;
const { link } = Astro.props;

import Link from "./Link.astro";
---

<article>
  <div><slot /></div>
  <div class="show"><Link href="#guests" variant="primary">{text}</Link></div>
</article>

<style>
  article {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: fit-content;
    gap: var(--gap-16);
  }

  div {
    width: 164px;
    height: auto;
  }
  .show {
    display: block;
    width: fit-content;
  }

  @media (min-width: 700px) {
    div {
      width: 264px;
      height: auto;
      margin: var(--margin-tb);
    }
    .show {
      display: none;
    }

    article:hover .show {
      display: block;
      width: fit-content;
    }
  }
</style>
